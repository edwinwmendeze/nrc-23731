---
import Button from '../ui/Button.astro';
import siteConfig from '../../data/config/site.json';

const teamName = siteConfig.team.name;
const siteDescription = siteConfig.site.description;
const teamDescription = siteConfig.team.description;
---

<section id="inicio" class="relative bg-gradient-to-br from-indigo-600 via-purple-500 to-pink-400 py-24 md:py-36 flex items-center min-h-[70vh]">
  <div class="max-w-3xl mx-auto px-4 text-center text-white">
    <h1 class="text-5xl md:text-6xl font-bold mb-4 drop-shadow-lg">{teamName}</h1>
    <p class="text-xl md:text-2xl font-medium mb-3 opacity-90">{siteDescription}</p>
    <p class="text-base md:text-lg mb-8 opacity-80 max-w-xl mx-auto">{teamDescription}</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <Button href="#integrantes" variant="primary" class="px-8 py-3 text-lg font-semibold shadow-md hover:scale-105 transition-transform">Conoce al equipo</Button>
      <Button href="#proyectos" variant="secondary" class="px-8 py-3 text-lg font-semibold shadow-md hover:scale-105 transition-transform">Ver Proyectos</Button>
    </div>
  </div>
</section>