---
// Página de Registro
let error = '';
let success = false;

if (Astro.request.method === 'POST') {
  try {
    const form = await Astro.request.formData();
    const username = typeof form.get('username') === 'string' ? form.get('username') : '';
    const password = typeof form.get('password') === 'string' ? form.get('password') : '';
    const email = typeof form.get('email') === 'string' ? form.get('email') : '';
    const name = typeof form.get('name') === 'string' ? form.get('name') : '';
    const lastName = typeof form.get('lastName') === 'string' ? form.get('lastName') : '';
    try {
      const { AuthService } = await import('../lib/services/AuthService');
      const authService = new AuthService();
      const result = await authService.register({ username, password, email, name, lastName });
      if (result.success) {
        success = true;
        Astro.cookies.set('auth_token', result.token, { path: '/', httpOnly: true });
        return Astro.redirect('profile');
      } else {
        error = result.message || 'No se pudo registrar el usuario';
      }
    } catch (e) {
      error = 'Error interno al intentar registrar';
      console.error('[REGISTER] Error interno:', e);
    }
  } catch (e) {
    error = 'Error procesando el formulario. Verifica que tu navegador envía correctamente los datos.';
    console.error('[REGISTER] Error al procesar formData:', e);
  }
}
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Registro de Usuario</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../styles/global.css">
  </head>
  <body class="bg-gray-50 flex items-center justify-center min-h-screen">
    <main class="w-full max-w-sm p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-2xl font-bold mb-6 text-center">Registro</h1>
      {error && <div class="mb-4 text-red-600">{error}</div>}
      <form method="POST" action="register" autocomplete="off" class="space-y-4">
        <div>
          <label class="block mb-1 font-medium" for="username">Usuario</label>
          <input type="text" id="username" name="username" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="block mb-1 font-medium" for="password">Contraseña</label>
          <input type="password" id="password" name="password" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="block mb-1 font-medium" for="email">Correo electrónico</label>
          <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="block mb-1 font-medium" for="name">Nombre</label>
          <input type="text" id="name" name="name" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="block mb-1 font-medium" for="lastName">Apellido</label>
          <input type="text" id="lastName" name="lastName" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring" />
        </div>
        <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">Registrarse</button>
      </form>
      <div class="mt-4 text-center text-sm">
        ¿Ya tienes cuenta? <a href="login" class="text-indigo-600 hover:underline">Inicia sesión</a>
      </div>
    </main>
  </body>
</html>
